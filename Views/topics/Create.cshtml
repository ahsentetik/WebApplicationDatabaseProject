@model WebApplicationDatabaseProject.topics

@{
    ViewBag.Title = "Create";
}

<style>
    /* CSS styling for the heading */
    h2 {
        color: #333;
        background-color: #ecf0f1; /* Light grey background */
        padding: 10px;
        border-radius: 5px;
        text-align: center;
    }
</style>

<h2>Topics Create</h2>


<style>
    /* Custom styling for the form container */
    .form-horizontal {
        max-width: 600px; /* Adjust the maximum width of the form */
        margin: 0 auto; /* Center the form on the page */
    }

        /* Custom styling for form labels */
        .form-horizontal label {
            margin-bottom: 5px; /* Adjust the spacing between labels and input fields */
        }

    /* Custom styling for form controls */
    .form-control {
        width: 100%; /* Make the input fields take up 100% width */
    }

    /* Custom styling for the "Create" button */
    .btn-create {
        background-color: #007bff; /* Blue color */
        color: #fff;
        border: 1px solid #007bff; /* Matching border color */
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-create:hover {
            background-color: #0056b3; /* Darker blue on hover */
        }

    /* Custom styling for the form heading */
    h4 {
        color: #007bff; /* Blue color for the heading */
    }

    /* Custom styling for validation messages */
    .text-danger {
        color: #e74c3c; /* Red color for validation messages */
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Topics</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.topic_id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.topic_id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.topic_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.topic_name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.topic_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.topic_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-create" />
            </div>
        </div>
    </div>
}


<style>
    /* Özel stil için geri dönüş bağlantısı */
    .back-to-list {
        display: inline-block;
        padding: 10px 20px;
        background-color: #6c757d; /* Gri renk */
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .back-to-list:hover {
            background-color: #495057; /* Hover durumunda daha koyu gri */
        }
</style>

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "back-to-list" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
