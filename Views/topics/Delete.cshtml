@model WebApplicationDatabaseProject.topics

@{
    ViewBag.Title = "Delete";
}

<style>
    /* Form container styling */
    .form-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Delete button styling */
    input[type="submit"] {
        padding: 10px 20px;
        background-color: #dc3545; /* Kırmızı renk */
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        input[type="submit"]:hover {
            background-color: #c82333; /* Hover durumunda daha koyu kırmızı */
        }

    /* Back to List link styling */
    .btn-back {
        padding: 10px 20px;
        background-color: #007bff; /* Mavi renk */
        color: #fff;
        text-decoration: none;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-back:hover {
            background-color: #0056b3; /* Hover durumunda daha koyu mavi */
        }
</style>

<div class="form-container">
    <h2>Topics Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>topics</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.topic_name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.topic_name)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary btn-back" })
            </div>
        }
    </div>
</div>
