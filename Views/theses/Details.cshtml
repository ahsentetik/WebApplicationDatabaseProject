            </dt>
            <dd>
                @Html.DisplayFor(model => model.topics.topic_name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.university.university_name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.university.university_name)
            </dd>
        </dl>
    </div>

    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.thesis_id }, new { @class = "edit-link" }) |
        @Html.ActionLink("Back to List", "Index", null, new { @class = "back-to-list-link" })
    </p>
</div>
