@model WebApplicationDatabaseProject.thesis

@{
    ViewBag.Title = "Delete";
}

<style>
    .form-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff; /* Arka plan rengi */
        border: 1px solid #ddd; /* Kenarlık rengi */
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Gölge efekti */
    }

    .delete-button {
        padding: 10px 20px;
        background-color: #dc3545; /* Kırmızı renk */
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .delete-button:hover {
            background-color: #c82333; /* Hover durumunda daha koyu kırmızı */
        }

    .btn-back {
        padding: 10px 20px;
        background-color: #007bff; /* Mavi renk */
        color: #fff;
        text-decoration: none;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-back:hover {
            background-color: #0056b3; /* Hover durumunda daha koyu mavi */
        }

    .dl-horizontal dt {
        font-weight: bold;
        margin-top: 10px;
    }

    .dl-horizontal dd {
        margin-bottom: 10px;
    }
</style>

