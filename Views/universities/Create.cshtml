@model WebApplicationDatabaseProject.university

@{
    ViewBag.Title = "Create";
}

<style>
    /* CSS styling for the heading */
    h2 {
        color: #333;
        background-color: #ecf0f1; /* Light grey background */
        padding: 10px;
        border-radius: 5px;
        text-align: center;
    }
</style>

<h2>Universities Create</h2>

<style>
    /* Özel stil için form konteynırı */
    .form-horizontal {
        max-width: 600px; /* Formun maksimum genişliğini ayarlayın */
        margin: 0 auto; /* Formu sayfanın ortasına hizalayın */
    }

        /* Özel stil için form etiketleri */
        .form-horizontal label {
            margin-bottom: 5px; /* Etiketler ve input alanları arasındaki boşluğu ayarlayın */
        }

    /* Özel stil için form kontrolleri */
    .form-control {
        width: 100%; /* Input alanlarının genişliğini %100 yapın */
    }

    /* Özel stil için "Create" düğmesi */
    .btn-create {
        background-color: #007bff; /* Mavi renk */
        color: #fff;
        border: 1px solid #007bff; /* Uyumlu kenarlık rengi */
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-create:hover {
            background-color: #0056b3; /* Hover durumunda daha koyu mavi */
        }

    /* Özel stil için form başlığı */
    h4 {
        color: #007bff; /* Başlık için mavi renk */
    }

    /* Özel stil için geçerlilik mesajları */
    .text-danger {
        color: #e74c3c; /* Kırmızı renkli geçerlilik mesajları için */
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>University</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.university_id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.university_id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.university_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.university_name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.university_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.university_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-create" />
            </div>
        </div>
    </div>
}


<style>
    /* Özel stil için geri dönüş bağlantısı */
    .back-to-list {
        display: inline-block;
        padding: 10px 20px;
        background-color: #6c757d; /* Gri renk */
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .back-to-list:hover {
            background-color: #495057; /* Hover durumunda daha koyu gri */
        }
</style>

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "back-to-list" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
